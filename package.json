{
  "name": "redux-pipeline",
  "description": "simple redux-pipeline boilerplate",
  "version": "1.0.0",
  "author": "Frode Sundby",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frodesundby/redux-pipeline.git"
  },
  "keywords": [
    "redux",
    "redux-router",
    "redux-devtools",
    "react",
    "pipeline"
  ],
  "bugs": {
    "url": "https://github.com/frodesundby/redux-pipeline/issues"
  },
  "homepage": "https://github.com/frodesundby/redux-pipeline#readme",
  "main": "server.js",
  "scripts": {
    "clean": "better-npm-run clean && better-npm-run copy-html",
    "prebuild": "npm run clean",
    "predev": "npm run clean",
    "build": "better-npm-run build",
    "dev": "better-npm-run dev",
    "test": "mocha --compilers js:babel-register --recursive ./src/tests/**/*.js",
    "test:watch": "npm test -- --watch"
  },
  "betterScripts": {
    "dev": {
      "command": "node ./server.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "development",
        "PORT": 3000
      }
    },
    "build": {
      "command": "webpack --config webpack.config.prod.js",
      "env": {
        "NODE_PATH": "./src",
        "NODE_ENV": "production"
      }
    },
    "clean": {
      "command": "rimraf dist"
    },
    "copy-html": {
      "command": "cpx ./src/index.html ./dist/"
    }
  },
  "dependencies": {
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "react-router-redux": "^4.0.5",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0"
  },
  "devDependencies": {
    "autoprefixer-loader": "^3.2.0",
    "babel-core": "^6.14.0",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-register": "^6.14.0",
    "better-npm-run": "0.0.11",
    "chai": "^3.5.0",
    "cpx": "^1.5.0",
    "css-loader": "^0.25.0",
    "eventsource-polyfill": "^0.9.6",
    "expect": "^1.20.2",
    "express": "^4.14.0",
    "less": "^2.7.1",
    "less-loader": "^2.2.3",
    "mocha": "^3.0.2",
    "redux-devtools": "^3.3.1",
    "redux-devtools-chart-monitor": "^1.4.2",
    "redux-devtools-diff-monitor": "^5.0.5",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-inspector": "^0.8.0",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "redux-thunk": "^2.1.0",
    "rimraf": "^2.5.4",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.2",
    "webpack-dev-middleware": "^1.7.0",
    "webpack-hot-middleware": "^2.12.2"
  }
}
